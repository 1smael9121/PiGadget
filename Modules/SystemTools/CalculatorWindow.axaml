<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PiGadget.Modules.SystemTools.CalculatorWindow"
        Title="Calculator" Width="400" Height="300">

    <StackPanel>
    <TextBlock Text="0" FontSize="24" HorizontalAlignment="Left" Margin="20"/>
    <Grid ColumnDefinitions="*,*,*,*" RowDefinitions="*,*,*,*">
        <Button Grid.Row="0" Grid.Column="0" Content="7" FontSize="20" Margin="5"/>
        <Button Grid.Row="0" Grid.Column="1" Content="8" FontSize="20" Margin="5"/>
        <Button Grid.Row="0" Grid.Column="2" Content="9" FontSize   ="20" Margin="5"/>
        <Button Grid.Row="0" Grid.Column="3" Content="/" FontSize="20" Margin="5"/>
        <Button Grid.Row="1" Grid.Column="0" Content="4" FontSize="20" Margin="5"/>
        <Button Grid.Row="1" Grid.Column="1" Content="5" FontSize="20" Margin="5"/>
        <Button Grid.Row="1" Grid.Column="2" Content="6" FontSize="20" Margin="5"/>
        <Button Grid.Row="1" Grid.Column="3" Content="*" FontSize="20" Margin="5"/>
        <Button Grid.Row="2" Grid.Column="0" Content="1" FontSize="20" Margin="5"/>
        <Button Grid.Row="2" Grid.Column="1" Content="2" FontSize="20" Margin="5"/>
        <Button Grid.Row="2" Grid.Column="2" Content="3" FontSize="20" Margin="5"/>
        <Button Grid.Row="2" Grid.Column="3" Content="-" FontSize="20" Margin="5"/>
        <Button Grid.Row="3" Grid.Column="0" Content="0" FontSize="20" Margin="5"/>
        <Button Grid.Row="3" Grid.Column="1" Content="C" FontSize="20" Margin="5"/>
        <Button Grid.Row="3" Grid.Column="2" Content="=" FontSize="20" Margin="5"/>
        <Button Grid.Row="3" Grid.Column="3" Content="+" FontSize="20" Margin="5"/>
        <Button Grid.Row="4" Grid.Column="0" Content="." FontSize="20" Margin="5"/>
    </Grid>
    </StackPanel>

</Window>